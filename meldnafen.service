[Unit]
Description = Starts instance of meldnafen using xinit
After = systemd-user-sessions.service network.target sound.target
Conflicts=getty@tty7.service

[Service]
User = alarm
Group = alarm
PAMName=login
Type = simple
TTYPath=/dev/tty7
ExecStart = /usr/bin/xinit /usr/bin/meldnafen-session -- :7 -nolisten tcp vt7
Restart = always
StandardInput = tty

[Install]
WantedBy = multi-user.target
